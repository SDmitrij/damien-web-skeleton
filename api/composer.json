{
    "name": "damien-side/learn-devops",
    "type": "project",
    "license": "BSD-3-Clause",
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "require": {
        "php": "^7.4",
        "ext-json": "*",
        "php-di/php-di": "^6.3",
        "slim/psr7": "^1.5",
        "slim/slim": "^4.10",
        "symfony/console": "^5.4"
    },
    "require-dev": {
        "overtrue/phplint": "3.0.6",
        "roave/security-advisories": "dev-latest",
        "squizlabs/php_codesniffer": "3.6.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "lint": "phplint",
        "cscheck": "phpcs",
        "cs-fix": "phpcbf",
        "app": "php bin/app.php --ansi"
    }
}
